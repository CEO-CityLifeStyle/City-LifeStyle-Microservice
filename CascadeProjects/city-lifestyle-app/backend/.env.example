# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/city_lifestyle
MONGODB_USER=your_mongodb_user
MONGODB_PASS=your_mongodb_password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRATION=24h

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=city-lifestyle-app
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
BIGQUERY_DATASET_ID=city_lifestyle_analytics
ML_MODELS_BUCKET=city-lifestyle-ml-models
METRICS_SUBSCRIPTION=realtime-metrics-sub

# Storage Configuration
UPLOAD_DIR=/app/uploads
CACHE_DIR=/app/cache
MAX_FILE_SIZE=10485760 # 10MB

# API Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# WebSocket Configuration
WS_PORT=3001

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
METRICS_INTERVAL=60000 # 1 minute

# A/B Testing
ENABLE_AB_TESTING=true
MIN_SAMPLE_SIZE=1000

# Image Optimization
IMAGE_QUALITY=80
MAX_IMAGE_SIZE=5242880 # 5MB
SUPPORTED_FORMATS=jpeg,jpg,png,webp

# Analytics Configuration
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=300000 # 5 minutes

# Machine Learning
ML_MODEL_VERSION_RETENTION=30 # days
ML_TRAINING_INTERVAL=86400000 # 24 hours

# Email Configuration (if needed)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# External APIs (if needed)
MAPS_API_KEY=your_maps_api_key
WEATHER_API_KEY=your_weather_api_key
